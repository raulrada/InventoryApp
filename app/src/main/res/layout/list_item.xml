<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/no_width"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_product_name_text_view"
            style="@style/text.textView.title"
            tools:text="Product: " />

        <TextView
            android:id="@+id/list_item_product_price_text_view"
            style="@style/text.textView.regular"
            tools:text="Price: " />

        <TextView
            android:id="@+id/list_item_product_quantity_text_view"
            style="@style/text.textView.regular"
            tools:text="Quantity: " />

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <Button
            android:id="@+id/list_item_sell_button"
            style="@style/button"
            android:layout_width="@dimen/buttonListItemWidth"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/buttonListItemMarginBottom"
            android:layout_marginEnd="@dimen/buttonListItemMarginEnd"
            android:layout_marginStart="@dimen/buttonListItemMarginStart"
            android:layout_marginTop="@dimen/buttonListItemMarginTop"
            android:focusable="false"
            android:text="@string/list_item_sell"
            android:textAllCaps="false" />

    </FrameLayout>

</LinearLayout>
